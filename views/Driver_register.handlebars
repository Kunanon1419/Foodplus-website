    * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
        font-family: 'foodplus';
    }

    /* set fullscreen */
    html,
    body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: #fff;
    }

    #wrapper {
        min-height: 100vh;
        min-width: 100%;
    }

    /* head-font */
    #head-font {
        color: #;
        font-weight: bold;
    }

    /* Grid layout */
    .container {
        display: grid;
        grid-template:
            'header header'0.2fr 'main main'4.8fr /1fr;
        padding: 0;
    }

    header {
        grid-area: header;
    }

    .main {
        grid-area: main;
    }

    /* flex parent */
    .flex-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    
    .flex-container>.flex-items {
        color: rgb(100, 94, 94);
    }

    .flex-container>.flex-items2 {
        color: rgb(100, 94, 94);
    }

    /* flex child */
    .flex-img-item {
        min-width: 100vh;
        width: 100%;
        background-color: #fff;
        margin-bottom: 20px;
    }

    .flex-items {
        width: 500px;
        height: auto;
        margin: 0 40px;
    }

    .flex-items2 {
        padding: 10px auto;
        width: 300px;
        height: 100%;
        margin: 0 20px;
    }

    .flex-items-sm {
        width: 220px;
        height: 100%;

    }

    /* wrapper */
    .break {
        flex-basis: 100%;
        height: 0;
    }

    /* input */
    .form-control {
        margin: 0px auto;
        border: 2px solid #000;
        background-color: #fff;
        width: 500px;
        border-radius: 25px;
    }
