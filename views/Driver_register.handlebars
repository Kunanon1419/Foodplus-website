        min-width: 100vh;
        width: 100%;
        background-color: #fff;
        margin-bottom: 20px;
    }

    .flex-items {
        width: 500px;
        height: auto;
        margin: 0 40px;
    }

    .flex-items2 {
        padding: 10px auto;
        width: 300px;
        height: 100%;
        margin: 0 20px;
    }

    /* wrapper */
    .break {
        flex-basis: 100%;
        height: 0;
    }

    /* input */
