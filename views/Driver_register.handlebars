    * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
        font-family: 'foodplus-light';
    }

    /* set fullscreen */
    html,
    body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: #fff;
    }

    #wrapper {
        min-height: 100vh;
        min-width: 100%;
    }

    /* head-font */
    #head-font {
        color: #;
        font-weight: bold;
    }

    /* Grid layout */
    .container {
        display: grid;
        grid-template:
            'header header'0.2fr 'main main'4.8fr /1fr;
        padding: 0;
    }

    header {
        grid-area: header;
    }

    .main {
        grid-area: main;
    }

    /* flex parent */
    .flex-container {
        display: flex;
        flex-flow: wrap;
    }


    .flex-container>.flex-items {
        color: rgb(100, 94, 94);
    }

    .flex-container>.flex-items2 {
        color: rgb(100, 94, 94);
    }

