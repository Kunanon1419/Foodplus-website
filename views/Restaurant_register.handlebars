<style>
    @font-face{
        font-family:foodplus-light;
        src:url('/font/rsufont/RSU_light.ttf')
    }
    *{
        box-sizing: border-box;
        padding: 0;
        margin: 0;
        font-family: 'foodplus-light';
    }
    #f_shadow{
        text-shadow: 2px 2px 11px rgba(0, 0, 0, 0.8);
        margin: 0;
    }
    html,body{
        height: 100%;
        width: 100%;

    }
    {{!-- set fullscreen --}}
    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: #fff;
    }
    #wrapper {
        min-height: 100vh; 
        min-width: 100%;
    }
    {{!-- head-font --}}
    #head-font{
        color: #ffc000;
        font-weight: bold;
    }
    {{!-- Grid layout --}}
    .container{
        display: grid;
        grid-template: 
            'header header' 0.2fr 
            'main main'  4.8fr
            /1fr;
        padding: 0;
    }
    header{
        grid-area: header;
    }
    .main{
        grid-area: main;
        background-image: url(/images/Restaurant/food.jpg);
        background-size: cover;
        background-repeat: no-repeat;

    }
    {{!-- flex parent --}}
    .flex-container{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }
    .flex-container > .flex-items{
        color: grey;
        
    }
    .flex-container > *{
        text-shadow: 2px 2px 11px rgba(0, 0, 0, 0.2);
    }
    .flex-img-item{
        max-width: 100vh;
        max-height: 100vh;;
    } 
    .flex-items-box{
        min-width: 500px;
        width: auto;
        height: auto;
        padding: 50px 50px;
        background-color: #fff;
        border-radius: 25px;
        /*shadow box*/
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }
    .flex-item{
        align-items: flex-start; 
        flex-wrap: wrap;
        flex-direction: column;
        margin: 5px 15px;
    }

    {{!-- wrapper --}}
    .break {
        flex-basis: 100%;
        height: 0;
    }
    {{!-- input --}}
    .form-control{
        border: 2px solid grey;
        width: 480px;
        border-radius: 10px;
    }
    .form-control-sm{
        flex-direction: row;
        margin: 5px 0px;
        border: 2px solid #000;
        background-color: #fff;
        width: 220px;
        border-radius: 25px;
        height: 39.2px;
    }
    .input-group-addon{
        border-radius: 10px;
    }
    
    .btnOnIcon{
        background: none;
        border: none;
    }

    {{!-- button Accept,Upload,Next--}}
    .button {
        display: inline-block;
        padding: 0.2rem 1.25rem;
        border-radius: 10rem;
        color: #fff;
        text-transform: uppercase;
        font-size: 1.2rem;
        letter-spacing: 0.15rem;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        z-index: 1;
        width: 100%;
        height: 40px;
        text-decoration: none;
        margin-top: 10px;
        margin-bottom: 5px;
        box-shadow: 2px 2px 11px rgba(0, 0, 0, 0.2);
        text-shadow: 2px 2px 11px rgba(0, 0, 0, 0.2);
    }
    .button:after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #ffc000;
        border-radius: 10rem;
        z-index: -2;
    }
    .button:before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        height: 100%;
        background-color: #ff7700;
        transition: all 0.3s;
        border-radius: 10rem;
        z-index: -1;
    }
    .button:hover {
        color: #fff;
    }
    .button:hover:before {
        width: 100%;
    }
    
    {{!-- button Back--}}
    .button-back {
        display: inline-block;
        padding: 0.75rem 1.25rem;
        border-radius: 10rem;
        color: #000;
        text-transform: uppercase;
        font-size: 1rem;
        letter-spacing: 0.15rem;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        z-index: 1;
        width: 100%;
        height: 40;
        text-decoration: none;
        margin-top: 10px;
        margin-bottom: 5px;
    }
    .button-back:after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #dddddd;
        border-radius: 10rem;
        z-index: -2;
    }
    .button-back:before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        height: 100%;
        background-color: red;
        transition: all 0.3s;
        border-radius: 10rem;
        z-index: -1;
    }
    .button-back:hover {
        color: #fff;
    }
    .button-back:hover:before {
        width: 100%;
    }

    /*Display*/
    #div1{
        
    }
    #div2{
        display: none;
    }
    #div3{
        display: none;
    }
    #div4{
        display: none;
    }
    #div5{
        display: none;
    }
    #div6{
        display: none;
    }
</style>
